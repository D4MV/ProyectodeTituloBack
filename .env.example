# Puerto de la aplicación (Azure lo configura automáticamente)
PORT=3000

# Entorno de ejecución
NODE_ENV=production

# URL de la base de datos PostgreSQL
# En Azure, configura esto en "Configuración" -> "Configuración de la aplicación"
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_bd?schema=public
DATABASE_URL=postgresql://usuario:password@localhost:5432/terratrack?schema=public

# Secret para JWT (debe ser una cadena aleatoria y segura)
# Genera uno con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_secret_super_seguro_aqui_cambiar_en_produccion

# Tiempo de expiración del token JWT (ej: 1h, 7d, 30d)
JWT_EXPIRATION=7d

# Orígenes permitidos para CORS (separados por comas)
# En producción, agrega la URL de tu frontend en Azure
ALLOWED_ORIGINS=http://localhost:5173,https://tu-frontend.azurewebsites.net

# Configuración de Prisma (opcional)
# PRISMA_QUERY_ENGINE_LIBRARY=
# PRISMA_QUERY_ENGINE_BINARY=
